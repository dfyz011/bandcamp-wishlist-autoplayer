{
	"manifest_version": 3,
	"name": "Bandcamp Autoplayer",
	"version": "1.0",
	"description": "Automatically play tracks from your Bandcamp with a handy popup interface.",
	"permissions": ["storage", "scripting"],
	"host_permissions": ["*://*.bandcamp.com/*"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["*://*.bandcamp.com/*"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
